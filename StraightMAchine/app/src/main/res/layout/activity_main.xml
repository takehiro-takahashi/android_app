<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
            <Button
                    android:text="@string/button_fail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/button_fail" android:layout_weight="1"/>
            <Button
                    android:text="@string/button_fight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/button_fight" android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
            <Button
                    android:text="@string/button_passed"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/button_passed" android:layout_weight="1"/>
            <Button
                    android:text="@string/button_congratulations"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/button_congratulations"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
            <Button
                    android:text="@string/button_nice"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/button_nice" android:layout_weight="1"/>
            <Button
                    android:text="@string/button_bad"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/button_bad" android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>